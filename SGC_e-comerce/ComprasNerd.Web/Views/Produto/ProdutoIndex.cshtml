@model IEnumerable<ComprasNerd.Web.Models.ProdutoModel>

<br/>
<br/>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Lista de produtos</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="CadastrarProduto" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i>Cadatrar produto
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Nome
                </th>
                <th>
                    Categoria
                </th>
                <th>
                    Preço
                </th>
                <th>Descrição</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Nome
                    </td>
                    <td>
                        @item.Categoria
                    </td>
                    <td>
                        @((item.Preco).ToString("c"))
                    </td>
                      <td>
                        @(item.Descricao)
                    </td>
                    <td>
                       <a asp-action="EditarProduto" class="btn btn-success" asp-route-id="@item.Id">
                           <i class="fas fa-edit"></i>
                       </a>
                       <a asp-action="ExcluirProduto" class="btn btn-danger" asp-route-id="@item.Id">
                           <i class="fas fa-trash"></i>
                       </a>
                    </td>
                  
                </tr>
            }
        </tbody>
    </table>
</div>