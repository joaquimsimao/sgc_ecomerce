@model ComprasNerd.Web.Models.ProdutoModel;



<form asp-action="ExcluirProduto">

    <input asp-for="Id" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="alert-danger">Tem certeza que deseja excluir produto @Model.Nome</h1>
        <hr />
        <div class="row">          
            <div class="col-2">
                <label asp-for="Nome" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Nome"  disabled class="form-control" />
            </div>
        </div>

         <div class="row">         
            <div class="col-2">
                <label asp-for="Preco" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Preco" disabled class="form-control" />   
            </div>
        </div>

         <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Descricao" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Descricao" disabled class="form-control" rows="5"></textarea>          
            </div>
        </div>

         <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Categoria" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Categoria" disabled class="form-control" />      
            </div>
        </div>

         <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="UrlImagem" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="UrlImagem" disabled class="form-control" />
                <span asp-validation-for="UrlImagem" class="text-danger"></span>
            </div>
       

        <div class="col-5 offset-2">
         <a asp-action="ProdutoIndex" class="btn-primary btn form-control ">Voltar para a listagem</a>
         </div>

        <div class="col-5">
          <input type="submit" value="Excluir" class="btn btn-danger form-control" />
        </div>

    </div>
     </div>

</form>

